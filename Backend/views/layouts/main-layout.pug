//- this main layout pug file to render optimised pages using extends and blocks

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title #{pageTitle}
    block styles
    
  body
    header.main-header
      .main-header-div
        ul.main-header-list
          li.main-header-list-items
            a(href="/",class=(path==="/"?'active':'')) Home
          li.main-header-list-items
            a(href="/admin/add-product",class=(path==="admin/add-product"?"active":"")) add products

    block content